<UserControl x:Class="PasswordSaver.MVVM.View.LogersPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PasswordSaver.MVVM.View"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <StackPanel Orientation="Vertical">
            <TextBlock 
                    Text="Type here website"
                    VerticalAlignment="Center"/>
            <TextBox x:Name="WebsiteName" 
                 Height="30"
                 Width="100"
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical">
            <TextBlock 
                    Text="Type in your Login"
                    VerticalAlignment="Center"/>
            <TextBox x:Name="Login" 
                 Height="30"
                 Width="100"
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical">
            <TextBlock 
                    Text="Type in your password"
                    VerticalAlignment="Center"/>
            <TextBox x:Name="Password" 
                 Height="30"
                 Width="100"
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical">
            <TextBlock 
                    Text="Some Comment(can be null)"
                    VerticalAlignment="Center"/>
            <TextBox x:Name="Comment" 
                 Height="30"
                 Width="100"
                 HorizontalContentAlignment="Left"
                 VerticalContentAlignment="Center"/>
        </StackPanel>
        
        <StackPanel Orientation="Vertical">
            
        </StackPanel>
    </StackPanel>
